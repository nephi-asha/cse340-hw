<% title %>
<h1><%= title %></h1>
<%- messages() %>
<% if (errors) { %>
    <ul class="notice">
   <% errors.array().forEach(error => { %>
     <li><%= error.msg %></li>
  <%  }) %>
   </ul>
  <% } %>
<div class="account-form">
    <form action="/inv/add-classification" method="post">
        <label for="classification_name">Classification Name: <br>
            <span>Classification name cannot contain a space or special character of any kind.</span>
            <input type="text" name="classification_name" id="classification_name" required pattern="^[a-zA-Z]+$" value="<%= classification_name %>">   
        </label>
        <button type="submit"> Add Classification</button>
    </form>
</div>